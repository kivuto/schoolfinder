<!-- 
* 		Filename: app/templates/app-base.mustache.js
*		Desc: Contains multiple clips that can be used to start the application.
*				- #app-base-buildup is used if you want the
*				  app to build the form as you go through the process
*				- #app-base-full will start you off with 'country', 'region' and a 'search' input
*					- now also includes a wrapper in which to write product HTML
-->


<script id="app-base-buildup">
	<div class="row kcsf-wrap">
		<div class="columns kcsf-content">
		    <form class="kcsf-form">
		    	<fieldset class="kcsf-fieldset">
		    	<legend>SchoolFinder</legend>
		
		    	</fieldset>
		    </form>
		</div>
	</div>
</script>


<script id="app-base-full">
	<div class="row kcsf-wrap kc-wrap-full">
   		<div class="large-11 large-centered columns kcsf-content">

		    <form class="awesome">
		
				<!-- Row (row starts) -->
				
				<div class="row" id="location-row">
		
					<!-- Country block (column starts) -->
					
				  <div id="countryWrap" class="small-12 large-6 columns">
				  	<label for="countryList">Country</label>
				  	<select class="custom dropdown countryList" id="country-list">
					  		<option class="selected disabled" selected disabled data-value="NULL">Select your country</option>
					  		<option data-value="CAN">Canada</option>
					  		<option data-value="USA">United States</option>
					  		<option data-value="GBR">United Kingdom</option>
					  		<option class="disabled" disabled>----------</option>
					  	</select>
					 </div>
					
					<!-- / (column ends) -->
		
					<!-- Region block (column starts) -->
		
					<div class="region-wrap small-12 large-6 columns">
						<label for="stateList">State/Province</label>
						  	<select id="region-list" class="custom dropdown region-list disabled" disabled>
						  		<option disabled selected>Organization Select</option>
							</select>
					</div>
					
					<!-- / ends -->
					
				</div>
				
				<!-- / Row (ends) -->
				
				
				
				
				
				<!-- Search block (row starts) -->
				
				<div class="row" id="autocomplete-row">
			      <div class="large-12 columns autocomplete-wrap">
			        <label for="autocomplete">Search for your school</label>
			        <input id="autocomplete" class="large-12" autocomplete="off" data-provide="typeahead" type="text" disabled placeholder="Enter school name" />
			        <span class="loading"></span>
			        <span class="search-btn"></span>
			      </div>
			    </div>
			    
				<!-- / (row ends) -->
		
		
				<!-- Suborg block (row starts) -->
		
				<div class="row" id="suborg-row">
					<div class="suborg-wrap small-12 large-12 columns">
						<label for="suborg-list">Sub organization</label>
						  	<select class="custom dropdown suborg-list" id="suborg-list">
						  		<option disabled selected>Organization Select</option>
							</select>
					</div>	
				</div>
		
				<!-- / (row ends) -->
		
		
				<!-- Messaging (row starts) -->
		
				<div class="row" id="messaging-row">
					<div class="large-12 columns" id="messaging">
		
					</div>
				</div>
		
				<!-- / (row ends) -->
		
		
				<!-- Products list (row starts) -->
		
				<div class="row" id="pmv-row">
					<div class="large-12 columns pmv-wrap">
						<ul id="pmv-list" class="large-block-grid-4"></ul>
						<div class="pmv-cover"></div>
						<div class="pmv-message">Find your store for access to the lowest prices on software!</div>
					</div>
				</div>
		
				<!-- / (row ends) -->
	
		    </form>
		</div>
	</div>

</script>
