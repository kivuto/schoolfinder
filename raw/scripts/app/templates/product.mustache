<script id="product">

	{{#options}}
	{{#info}}
	<li>
		<div class="item" title="{{ProducerOrganizationName}} &ndash; {{ProductMajorVersionName}}">
			<a href="{{OfferingListUrl}}&{{UtmTrack}}&utm_source={{UtmStoreName}}" class="item-link">
				<span class="item-hover">
					<span class="fill"></span>
					<span class="message">Get it now!</span>
				</span>
				<span class="title">{{ProductMajorVersionName}}</span>
				<img src="{{SmallImageUrl}}" alt="{{ProductMajorVersionName}}" />
				<span class="price">
					<span class="fill"></span>
					<span>{{LowestPriceOfferingPriceFormatted}}</span>
				</span>
			</a>
		</div>
	</li>
	{{/info}}
	{{/options}}

</script>

<script id="more">

	{{#options}}
